proc BAZIC81 {size} {
	section Code {
		set	start [pos]
		set line ""
		set	e 0
		while {[pos] < $size+20} {
			incr	e
			set	line ""
			set	term 0
			set	Linestart [pos]
			while {($term != 0xEC) && ([pos]-$start < $size)} {
				set	term [hex 1]
				set line $line[BAZIC81_GetToken $term]
			}
			entry	"Line $e" $line [expr [pos]-$Linestart] $Linestart
		}
	}
}
